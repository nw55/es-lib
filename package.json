{
  "name": "@nw55/lib",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/nw55/es-lib.git"
  },
  "workspaces": [
    "*-packages/*"
  ],
  "scripts": {
    "run-all:libs": "wsrun -x @nw55/build-tools -x @nw55/eslint-config",
    "run-all:other": "wsrun -p @nw55/build-tools -p @nw55/eslint-config",
    "dev": "tsc -b -w",
    "test": "jest",
    "lint": "cross-env NW55_ESLINT_OPTIONS=build eslint .",
    "build:libs:esm": "tsc -b",
    "build:libs:cjs": "run run-all:libs tsc -p src --module CommonJS --outDir dist --declaration false --declarationMap false",
    "build:other": "run run-all:other -t -m build",
    "build": "run build:other && run build:libs:esm && run build:libs:cjs",
    "clean:libs": "rimraf '{lib,util}-packages/*/{dist,lib}'",
    "clean:other": "run run-all:other -m clean",
    "clean": "run clean:libs && run clean:other",
    "prepublishOnly": "run clean && run build && run lint && run test"
  },
  "devDependencies": {
    "@nw55/build-tools": "~0.2.4",
    "@nw55/eslint-config": "~0.2.3",
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.26.0",
    "jest": "^27.0.6",
    "jest-extended": "^0.11.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.4",
    "wsrun": "^5.2.4"
  }
}

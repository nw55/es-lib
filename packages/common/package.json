{
  "name": "@nw55/common",
  "description": "nw55 common ts/js library",
  "version": "0.2.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/nw55/es-lib.git",
    "directory": "packages/common"
  },
  "author": "Niklas Werner (nw55) <nw55@outlook.com>",
  "license": "MIT",
  "main": "src/index.ts",
  "sideEffects": false,
  "scripts": {
    "build:esm": "tsc -b",
    "build:cjs": "tsc -b tsconfig.cjs.json",
    "dev": "tsc -w --noEmit",
    "test": "cd test && mocha",
    "test:watch": "cd test && mocha -w --reporter min",
    "lint": "eslint . --ext .js,.ts -c eslint-config.js",
    "lint:fix": "eslint . --ext .js,.ts -c eslint-config.js --fix",
    "clean": "rimraf dist/* lib/*",
    "build": "yarn clean && yarn build:esm && yarn build:cjs && yarn lint",
    "ci": "yarn build && yarn test",
    "prepublishOnly": "yarn ci"
  },
  "files": [
    "/dist",
    "/lib",
    "/src"
  ],
  "publishConfig": {
    "access": "public",
    "main": "dist/index.js",
    "module": "lib/index.js",
    "types": "lib/index.d.ts"
  },
  "devDependencies": {
    "@nw55/build-tools": "~0.2.4",
    "@nw55/eslint-config": "0.2.3",
    "@types/chai": "^4.2.12",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "chai": "^4.2.0",
    "eslint": "^7.14.0",
    "rimraf": "^3.0.2",
    "typescript": "~4.1.2"
  }
}
